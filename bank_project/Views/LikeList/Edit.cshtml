@model bank_project.Models.LikeListData

@{
    ViewData["Title"] = "編輯喜好項目";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title"><i class="bi bi-pencil-square"></i> 編輯喜好項目</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="SN" />
                        <input type="hidden" asp-for="No" />
                        <input type="hidden" asp-for="Account" />
                        <input type="hidden" asp-for="UserId" />

                        <div class="mb-3">
                            <label class="form-label">產品名稱</label>
                            <input class="form-control" value="@Model.Product?.ProductName" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-save"></i> 儲存變更
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> 返回清單
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
