@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <div class="auth-container" style="max-width: 400px; margin: 0 auto;">
        <!-- 登入表單 -->
        <div id="loginSection" class="mb-4">
            <h3>會員登入</h3>
            <form id="loginForm" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="使用者名稱" required />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="密碼" required />
                </div>
                <button type="submit" class="btn btn-primary">登入</button>
                <button type="button" class="btn btn-primary" id="showRegister">註冊會員</button>
                <div id="loginMessage" class="text-danger mt-2"></div>
            </form>
        </div>

        <!-- 註冊表單 -->
        <div id="registerSection" style="display: none;">
            <h3>會員註冊</h3>
            <form id="registerForm" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="UserName" placeholder="使用者名稱" required />
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="Email" placeholder="電子郵件" required />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="Account" placeholder="扣款帳號" required />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="Password" placeholder="密碼 (至少6位)" required />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="ConfirmPassword" placeholder="確認密碼" required />
                </div>
                <button type="submit" class="btn btn-success">註冊</button>
                <button type="button" class="btn btn-link" id="showLogin">返回登入</button>
                <div id="registerMessage" class="text-danger mt-2"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // 切換登入/註冊表單
            $('#showRegister').click(function () {
                $('#loginSection').hide();
                $('#registerSection').show();
            });

            $('#showLogin').click(function () {
                $('#registerSection').hide();
                $('#loginSection').show();
            });

            // 登入表單提交
            $('#loginForm').submit(function (e) {
                e.preventDefault();

                $.ajax({
                    url: '/Home/Login',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            window.location.href = '/LikeList';
                        } else {
                            $('#loginMessage').text(response.message);
                        }
                    }
                });
            });


            // 註冊表單提交
            $('#registerForm').submit(function (e) {
                e.preventDefault();

                // 前端驗證密碼是否一致
                var password = $('input[name="Password"]').val();
                var confirmPassword = $('input[name="ConfirmPassword"]').val();

                if (password !== confirmPassword) {
                    $('#registerMessage').text("密碼與確認密碼不一致");
                    return;
                }

                $.ajax({
                    url: '/Home/Register',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        $('#registerMessage').text(response.message);
                        if (response.success) {
                            $('#registerForm')[0].reset();
                            $('#registerSection').hide();
                            $('#loginSection').show();
                        }
                    }
                });
            });
        });
    </script>
}