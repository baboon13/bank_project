@model List<UserData>
@{
    ViewData["Title"] = "使用者管理";
}

<h2 class="text-center mb-5">使用者列表</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="User" asp-action="Create">
            <i class="bi bi-person-plus"></i> 新增使用者
        </a>
    </div>
    <div class="col text-end">
        <form asp-controller="User" asp-action="Index" method="get" class="d-inline">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="搜尋使用者..." />
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>使用者ID</th>
            <th>使用者名稱</th>
            <th>電子郵件</th>
            <th>扣款帳號</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Account</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="User" asp-action="Edit" asp-route-id="@user.UserID">
                        <i class="bi bi-pencil"></i> 編輯
                    </a>
                    <a class="btn btn-danger btn-sm ms-2" asp-controller="User" asp-action="Delete" asp-route-id="@user.UserID">
                        <i class="bi bi-trash"></i> 刪除
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">目前沒有使用者資料</div>
}

@section Scripts {
    <script>
        // 刪除確認對話框
        document.querySelectorAll('.btn-danger').forEach(btn => {
            btn.addEventListener('click', function (e) {
                if (!confirm('確定要刪除此使用者嗎？')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}