@model bank_project.Models.LoginViewModel
@{
    ViewData["Title"] = "登入";
}

<h2>登入</h2>

<form asp-action="Login" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
        <label asp-for="RememberMe" class="form-check-label">記住我</label>
    </div>
    <button type="submit" class="btn btn-primary">登入</button>
    <a asp-controller="Account" asp-action="Register" class="btn btn-link">還沒有帳號？註冊</a>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
