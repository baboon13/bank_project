@using Microsoft.AspNetCore.Identity
@using bank_project.Models
@inject SignInManager<UserData> SignInManager
@inject UserManager<UserData> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="LikeList" asp-action="Index">我的喜好清單</a>
                </li>
                <li class="nav-item">
                    <button type="submit" class="nav-link btn btn-link text-dark">登出</button>
                </li>
            </ul>
        </form>
}
else
{
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">登入</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">註冊</a>
            </li>
        </ul>
}
